<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/primary_variant"

        android:layout_marginTop="5dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_chips">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SearchView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/search_news"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/general_category"
                    android:layout_margin="6dp"
                    android:text="General"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/secondary_variant"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/business_category"
                    android:layout_margin="6dp"
                    android:text="Business"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/secondary_variant"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sports_category"
                    android:layout_margin="6dp"
                    android:text="Sports"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/secondary_variant"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/entertainment_category"
                    android:layout_margin="6dp"
                    android:text="Entertainment"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/secondary_variant"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/science_category"
                    android:layout_margin="6dp"
                    android:text="Science"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/secondary_variant"
                    android:textSize="16sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/technology_category"
                    android:layout_margin="6dp"
                    android:text="Technology"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/secondary_variant"
                    android:textSize="16sp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/health_category"
                    android:layout_margin="6dp"
                    android:text="health"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/secondary_variant"
                    android:textSize="16sp"/>


            </LinearLayout>

    </HorizontalScrollView>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progress_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_recyclerview"/>

</LinearLayout>